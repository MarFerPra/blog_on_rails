<%= render 'layouts/header' %>
<%= render 'layouts/navbar' %>

<div class="jumbotron text-center ">
  <h2>Team</h2>
</div>

<div class="container-fluid bg-grey">
  <h2 class="text-center">List of Members</h2> <hr>
  <div class="row">
    <div class="col-sm-3">
      <%= render 'layouts/publicidad_izquierda' %>
    </div>
    <div class="col-sm-6">
      <% @users.each do |user| %>
      <div class="col-sm-4 user_desc">
          <p><%= user.name %></p>
          <p><%= user.email %></p>
          <%= link_to user_path(user) do %>
            <span class="glyphicon glyphicon-user"></span>
          <% end %>
          <% if !current_user.nil? %>
            <% if current_user.canEdit?(user) %>
              | <%= link_to edit_user_path(user) do %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %> |
              <%= link_to user_path(user), method: :delete,
                  data: {confirm: 'Are you sure?'} do %>
                    <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            <% end %>
          <% end %>
      </div>
      <% end %>
    </div>
    <div class="col-sm-3">
      <%= render 'layouts/publicidad_derecha' %>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>

<style>
.user_desc{
  border-style: ridge;
  border-width: thin;
  padding: 10px;
  text-align: center;
}
.centered{
    text-align:center;
  }
.jumbotron {
    background-color: #6495ed;
    color: #ffffff;
    padding-top: 40px;
    padding-bottom: 5px;
    padding-left: 25px;
    padding-right: 25px;
    font-family: Lato, sans-serif;
}
</style>
