<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid bg-grey">
    <div class="row">
      <div class = "col-sm-3 articles ">
      </div>

      <div class = "col-sm-6">
        <p><%= f.text_field :title, class: "form-control", placeholder: "Title", required: true %></p>
        <p><%= f.text_area :text, class: "form-control article_text", placeholder: "New article...", required: true %></p>
        <p><%= f.hidden_field(:author, :value => current_user.name) %></p>

        <div class = "col-sm-4 col-sm-offset-4">
          <%= f.submit "Post article", class: "btn btn-info btn-default btn-block" %>
        </div>

      </div>

      <div class = "col-sm-3">
      </div>

    </div>
  </div>
<% end %>

<style>
.article_text{
  resize: horizontal;
  height:500px;
  min-height:250px;
}
