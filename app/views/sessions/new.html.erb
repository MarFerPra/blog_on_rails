<%= render 'layouts/header' %>
<%= render 'layouts/navbar' %>

<div class="jumbotron text-center ">
  <h2>Login</h2>
</div>

<%= form_for(:session, :url => sessions_path) do |f| %>

<% flash.each do |key, value| %>
  <p>  <%= value %> </p>
<% end %>

<p>
  <%= f.label :email %> <br/>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :password %> <br />
  <%= f.password_field :password %>
</p>
<p>
  <%= f.submit "Sign in" %>
</P>
<% end %>

<p> New? <%= link_to "Sign up now!", signup_path %> </p>

<style>
.jumbotron {
    background-color: #6495ed;
    color: #ffffff;
    padding-top: 40px;
    padding-bottom: 5px;
    padding-left: 25px;
    padding-right: 25px;
    font-family: Montserrat, sans-serif;
}
</style>
