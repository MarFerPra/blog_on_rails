<%= render 'layouts/header' %>
<%= render 'layouts/navbar' %>

<% flash.each do |key, value| %>
  <p>  <%= value %> </p>
<% end %>

<div class="jumbotron text-center ">
  <h2>Login</h2>
</div>

<div class="container-fluid bg-grey">
  <h2 class="text-center">Account information</h2>
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <%= form_for(:session, :url => sessions_path) do |f| %>
          <div class="row centered">
            <div class="col-sm-6 form-group">
                <%= f.text_field :email, class: "form-control", placeholder: "Email", required: true %>
            </div>
            <div class="col-sm-6 form-group">
              <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
            </div>
            </div>
              <div class="col-sm-4 col-sm-offset-4  ">
                <%= f.submit "Sign in", class: "btn btn-info btn-default btn-block" %>
              </div>
              <% end %>
            </br> </br>
              <h4> New? <%= link_to "Sign up now!", signup_path %> </h4>
          </div>
        </div>
        <div class="col-sm-3">
        </div>
  </div>
</div>


<style>
.jumbotron {
    background-color: #6495ed;
    color: #ffffff;
    padding-top: 40px;
    padding-bottom: 5px;
    padding-left: 25px;
    padding-right: 25px;
    font-family: Lato, sans-serif;
}
</style>
