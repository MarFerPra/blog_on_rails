<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>

<% flash.each do |key, value| %>
  <p>  <%= value %> </p>
<% end %>

<p>
  <%= f.label :email %> <br/>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :password %> <br />
  <%= f.password_field :password %>
</p>
<p>
  <%= f.submit "Sign in" %>
</P>
<% end %>

<p> New user? <%= link_to "Sign up now!", signup_path %> </p>
